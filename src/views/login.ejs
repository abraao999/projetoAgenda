<%- include('includes/head'); %>
  <%- include('includes/navbar'); %>
    <div class="container">

      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Faça seu login ou crie a sua conta</h1>
          <p class="text-center lead">Entre com seu Login ou crie a sua conta</p>
          <%- include('includes/mensagens');%>

            <div class="row">
              <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                  <div class="mb-3">
                    <label class="form-label">Seu e-mail</label>
                    <input type="email" name="email" class="form-control" id="exampleInputEmail1">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" name="senha" class="form-control" id="exampleInputEmail1"
                      aria-describedby="emailHelp">
                  </div>

                  <button type="submit" id="botao" class="btn btn-dark">Cadastrar</button>
                </form>
              </div>
              <div class="col-lg">
                <h4>Faça seu login</h4>
                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken%>>

                  <div class="mb-3">
                    <label class="form-label">Seu e-mail</label>
                    <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                      aria-describedby="emailHelp">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" name="senha" class="form-control" id="exampleInputEmail1"
                      aria-describedby="emailHelp">
                  </div>

                  <button type="submit" id="botao" class="btn btn-dark">Entrar</button>
                </form>
              </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer'); %>